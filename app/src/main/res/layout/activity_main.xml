<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:padding="30dp"
    >

<TextView
    android:id="@+id/tv_titre"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="The questionnaire"
    android:textSize="25sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

<TextView
    android:id="@+id/tv_q1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Est ce que ca va ?"
    android:textSize="20sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_titre"
    android:layout_marginTop="50dp"
    />

<Switch
    android:id="@+id/sw_q1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/tv_q1"
    app:layout_constraintTop_toTopOf="@id/tv_q1"
    app:layout_constraintRight_toRightOf="parent"
    />


<TextView
    android:id="@+id/tv_q2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Quel est ton niveau en bilboquet ?"
    android:textSize="20sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_q1"
    android:layout_marginTop="50dp"
    />

<SeekBar
    android:id="@+id/sb_q2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/tv_q2"
    android:layout_marginTop="20dp"
    android:max="10"
    android:min="0"
    />

<TextView
    android:id="@+id/tv_q3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ton adresse mail ?"
    android:textSize="20sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/sb_q2"
    android:layout_marginTop="50dp"
    />

<EditText
    android:id="@+id/et_q3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textEmailAddress"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_q3"/>

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_v"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5"
    />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_h"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.8" />



<Button
    android:id="@+id/btn_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ok"
    app:layout_constraintRight_toRightOf="@id/guideline_v"
    app:layout_constraintBottom_toBottomOf="@id/guideline_h"
    android:layout_margin="5dp"
    />

<Button
    android:id="@+id/btn_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ok"
    app:layout_constraintRight_toRightOf="@id/guideline_v"
    app:layout_constraintTop_toBottomOf="@id/guideline_h"
    android:layout_margin="5dp"
    />

<Button
    android:id="@+id/btn_3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ok"
    app:layout_constraintLeft_toRightOf="@id/guideline_v"
    app:layout_constraintBottom_toBottomOf="@id/guideline_h"
    android:layout_margin="5dp"
    />

<Button
    android:id="@+id/btn_4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ok"
    app:layout_constraintLeft_toRightOf="@id/guideline_v"
    app:layout_constraintTop_toBottomOf="@id/guideline_h"
    android:layout_margin="5dp"
    />


</androidx.constraintlayout.widget.ConstraintLayout>